<!DOCTYPE html>
<html>
<head>
  <title><%= get_title %></title>
  <%= favicon_link_tag 'favicon.ico' %>
  <%= stylesheet_link_tag 'application', 'data-turbolinks-track' => true, media: 'all' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=0.5">
</head>
<body id="material_body_html">
<div id="material_container">
  <div id="material_header">
    <div id="material_header_content">
      <a href="<%= root_path %>">
        <svg id="material_header_logo" width="150" height="54" xmlns="http://www.w3.org/2000/svg">
          <g>
            <text xml:space="preserve" text-anchor="start" font-family="Helvetica, Arial, sans-serif" font-size="39" id="svg_21" y="40.5" x="6" fill-opacity="null" stroke-opacity="null" stroke-width="2" stroke="#ffffff" fill="#ffffff">Endoha</text>
          </g>
        </svg>
      </a>
      <div class="float_right_actions">
        currently selected: <%= current_class_member.full_name if current_class_member %>
      </div>
    </div>
  </div>
  <div id="material_body">
    <div id="material_body_content">
      <div id="material_body_popup" style="position: relative;"></div>
      <%= yield %>
    </div>
  </div>
  <div id="material_footer">
    <div id="material_footer_content">
      <div id="material_footer_left">

      </div>
      <div id="material_footer_right">

      </div>
    </div>
  </div>
</div>
<% if flash[:notice] %>
    <script>
      popup("<%= flash[:notice] %>", "success")
    </script>
<% end %>
<% if flash[:alert] %>
    <script>
      popup("<%= flash[:alert] %>", "danger")
    </script>
<% end %>
</body>
</html>