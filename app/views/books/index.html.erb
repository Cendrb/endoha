<h1>Books</h1>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Author</th>
    <th>Category</th>
    <th>
      <div class="float_right_actions"><%= link_to mi.add.md_36, new_book_path %></div>
    </th>
  </tr>
  </thead>

  <tbody>
  <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.name, book %></td>
        <td><%= book.author %></td>
        <td><%= book.category.name %></td>
        <td>
          <div class="float_right_actions">
            <%= link_to mi.edit, edit_book_path(book) %>
            <%= link_to mi.delete, book, method: :delete %>
          </div>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
