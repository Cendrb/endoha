<h1><%= plural_table_name.titleize %></h1>

<table class="table table-striped">
  <thead>
  <tr>
    <% attributes.reject(&:password_digest?).each do |attribute| -%>
        <th><%= attribute.human_name %></th>
    <% end -%>
    <th>
      <div class="float_right_actions"><%%= link_to mi.add.md_36, new_<%= singular_table_name %>_path %></div>
    </th>
  </tr>
  </thead>

  <tbody>
  <%% @<%= plural_table_name %>.each do |<%= singular_table_name %>| %>
  <tr>
    <% attributes.reject(&:password_digest?).each do |attribute| -%>
        <% if attribute == attributes.reject(&:password_digest?).first -%>
            <td><%%= link_to <%= singular_table_name %>.<%= attribute.name %>, <%= singular_table_name %> %></td>
        <% else -%>
            <td><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
        <% end -%>
    <% end -%>
    <td>
      <div class="float_right_actions">
        <%%= link_to mi.edit, edit_<%= singular_table_name %>_path(<%= singular_table_name %>) %>
        <%%= link_to mi.delete, <%= singular_table_name %>, method: :delete, data: {confirm: "You sure about this?"} %>
      </div>
    </td>
  </tr>
  <%% end %>
  </tbody>
</table>
